<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" >

    <class name="edu.osu.cws.evals.models.EmailType" table="email_types" batch-size="50">
        <id name="type" type="string" column="TYPE"/>

        <property name="mailTo" length="64" column="MAILTO"/>
        <property name="cc" length="64" column="CC"/>
        <property name="bcc" length="64" column="BCC"/>
    </class>
</hibernate-mapping>