<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0">
	<portlet>
		<portlet-name>evals</portlet-name>
		<display-name>EvalS</display-name>
		<portlet-class>edu.osu.cws.evals.portlet.EvalsPortlet</portlet-class>
        <init-param>
            <name>home-jsp</name>
            <value>/jsp/home/start.jsp</value>
        </init-param>
        <init-param>
            <name>admin-home-jsp</name>
            <value>/jsp/home/startAdmin.jsp</value>
        </init-param>
        <init-param>
            <name>supervisor-home-jsp</name>
            <value>/jsp/home/startSupervisor.jsp</value>
        </init-param>
        <init-param>
            <name>reviewer-home-jsp</name>
            <value>/jsp/home/startReviewer.jsp</value>
        </init-param>
        <init-param>
            <name>my-information-jsp</name>
            <value>/jsp/home/myInfo.jsp</value>
        </init-param>
        <init-param>
            <name>error-jsp</name>
            <value>/jsp/error.jsp</value>
        </init-param>
        <init-param>
            <name>admin-list-jsp</name>
            <value>/jsp/admins/list.jsp</value>
        </init-param>
        <init-param>
            <name>admin-delete-jsp</name>
            <value>/jsp/admins/delete.jsp</value>
        </init-param>
        <init-param>
            <name>reviewer-list-jsp</name>
            <value>/jsp/reviewers/list.jsp</value>
        </init-param>
        <init-param>
            <name>reviewer-delete-jsp</name>
            <value>/jsp/reviewers/delete.jsp</value>
        </init-param>
        <init-param>
            <name>configuration-list-jsp</name>
            <value>/jsp/configurations/list.jsp</value>
        </init-param>
        <init-param>
            <name>criteria-add-jsp</name>
            <value>/jsp/criteria/add.jsp</value>
        </init-param>
        <init-param>
            <name>criteria-list-jsp</name>
            <value>/jsp/criteria/list.jsp</value>
        </init-param>
        <init-param>
            <name>criteria-delete-jsp</name>
            <value>/jsp/criteria/delete.jsp</value>
        </init-param>
        <init-param>
			<name>appraisal-jsp</name>
			<value>/jsp/appraisals/appraisal.jsp</value>
		</init-param>
        <init-param>
            <name>review-list-jsp</name>
            <value>/jsp/appraisals/reviewList.jsp</value>
        </init-param>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
    <resource-bundle>content.Language</resource-bundle>
		<portlet-info>
			<title>EvalS</title>
			<short-title>evals</short-title>
			<keywords>evals, Performance, Appraisal, HR</keywords>
		</portlet-info>
		<security-role-ref>
			<role-name>administrator</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>guest</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>power-user</role-name>
		</security-role-ref>
		<security-role-ref>
			<role-name>user</role-name>
		</security-role-ref>
	</portlet>
    <user-attribute>
        <description>User Given Name</description>
        <name>user.name.given</name>
    </user-attribute>
    <user-attribute>
        <description>User Last Name</description>
        <name>user.name.family</name>
    </user-attribute>
    <user-attribute>
        <description>User eMail</description>
        <name>user.home-info.online.email</name>
    </user-attribute>
    <user-attribute>
        <description>User Login Id</description>
        <name>user.login.id</name>
    </user-attribute>
    <user-attribute>
        <description>User Nickname</description>
        <name>user.name.nickName</name>
    </user-attribute>
</portlet-app>
